#A rough example of environmental variables for compiling with PGI compilers
export OPS_COMPILER=pgi
export PATH=$PATH:/opt/pgi/linux86-64/2015/bin/
export OPS_INSTALL_PATH=/home/gihan/OPS/ops
export CUDA_INSTALL_PATH=/usr/local/cuda-6.5/
export OPENCL_INSTALL_PATH=/usr/local/cuda-6.5/
export MPI_INSTALL_PATH=/opt/pgi/linux86-64/2015/mpi/mpich/
export MPICH_CXX=/opt/pgi/linux86-64/2015/bin/pgCC
export MPICH_CC=/opt/pgi/linux86-64/2015/bin/pgcc
export MPICH_F90=/opt/pgi/linux86-64/2015/bin/pgfortran
