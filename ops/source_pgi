#A rough example of environmental variables for compiling with PGI compilers
export PATH=/opt/pgi/linux86-64/14.7/bin/:$PATH
export PATH=/opt/mvapich2/2.0-pgi147/bin:$PATH
export LD_LIBRARY_PATH=/opt/mvapich2/2.0-pgi147/lib/:$LD_LIBRARY_PATH
export LD_LIBRARY_PATH=/usr/lib64:/opt/pgi/linux86-64/14.7/lib:$LD_LIBRARY_PATH
export MPI_INSTALL_PATH=/opt/mvapich2/2.0-pgi147/
export OPS_COMPILER=pgi
export OPS_INSTALL_PATH=/home/mudalige/Cloverleaf/OPS_rebase/OPS/ops
export CUDA_INSTALL_PATH=/usr/local/cuda-6.0
